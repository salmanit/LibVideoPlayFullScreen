<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="#55000000"
    android:gravity="center_vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/iv_restart_or_pause"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/vpf_ic_player_start" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/tv_audio_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="/"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textSize="14sp" />-->

    <SeekBar
        android:id="@+id/sb_audio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@null"
        android:max="100"
        android:maxHeight="1.5dp"
        android:minHeight="1.5dp"
        android:progressDrawable="@drawable/vpf_seek_progress"
        android:thumb="@drawable/vpf_seek_thumb" />
    <TextView
        android:id="@+id/tv_audio_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
</LinearLayout>